<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:maxHeight="170dp"
    android:minHeight="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:clickable="true"
        app:cardBackgroundColor="@null">

        <RelativeLayout
            android:id="@+id/delete_background"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:background="@drawable/swipedeletebackground">

            <ImageView
                android:id="@+id/delete_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="35dp"
                android:src="@drawable/ic_baseline_delete_outline_24" />

            <TextView
                android:id="@+id/delete_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10sp"
                android:textColor="#fff"
                android:textSize="13dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"

            android:layout_marginLeft="15dp"
            android:background="@drawable/swipeactivebackground">

            <ImageView
                android:id="@+id/achieved_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:src="@drawable/ic_round_done_all_24" />

            <TextView
                android:id="@+id/achieved_text_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10sp"
                android:layout_toRightOf="@id/achieved_icon"
                android:textColor="#fff"
                android:textSize="13dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_item"
            android:layout_width="match_parent"
            android:layout_height="120dp"

            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"

            android:visibility="visible">

            <ImageView
                android:id="@+id/cardBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/swipebackground"
                android:scaleType="centerCrop"

                android:src="@drawable/building1" />

            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/montserrat"

                android:inputType="textMultiLine"
                android:text=" Hike the Milford Track, New Zealand"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/cardTargetDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardTitle"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/montserrat"
                android:text="January 1, 2021"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cardCategoryIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/ic_baseline_flight_24" />


            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:buttonTint="@color/white" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>>

</RelativeLayout>