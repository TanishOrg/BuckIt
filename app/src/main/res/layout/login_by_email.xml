<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/login1_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:outlineAmbientShadowColor="@color/colorAccent"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:text="Welcome back"
            android:textSize="34dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#00283E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
            android:text="Login to your account"
            android:layout_marginTop="175dp"

            android:fontFamily="@font/montserrat"/>

        <EditText
            android:id="@+id/login_email_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="380dp"
            android:background="@drawable/round_border"
            android:textSize="16dp"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Email Address"
            android:padding="16dp" />

        <EditText
            android:id="@+id/login_password_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:padding="16dp"
            android:textColorHint="@android:color/darker_gray"
            android:layout_alignBottom="@id/login_email_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="300dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/round_border"
            android:hint="Password"
             android:textSize="16dp"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="220dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_pink"
            android:gravity="center"
            android:text="Login"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <Button
            android:id="@+id/loginViaPhone_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:padding="16dp"
            android:layout_marginBottom="150dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/getstartedbuttonshape"
            android:gravity="center"
            android:text="Login via phone "
            android:textColor="@color/pink1"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/text_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/login_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:padding="10sp"
            android:text="Register"
            android:textColor="@color/colorbottomnav"
            android:textSize="16dp" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>