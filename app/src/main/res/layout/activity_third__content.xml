<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ea1"
        android:layout_width="1200dp"
        android:layout_height="1200dp"
        android:alpha=".8"
        android:transitionName="ea1transition1"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:srcCompat="@drawable/ea1" />

    <ImageView
        android:id="@+id/ea2"
        android:layout_width="266dp"
        android:layout_height="329dp"
        android:layout_marginLeft="204dp"
        android:layout_marginTop="464dp"
        android:alpha=".9"
        android:transitionName="ea2transition1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ea2" />

    <ImageView
        android:id="@+id/ea4"
        android:layout_width="293dp"
        android:layout_height="282dp"
        android:layout_marginBottom="35dp"
        android:alpha="0.8"
        android:transitionName="ea4transition1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/ea4" />


    <ImageView
        android:id="@+id/ea5"
        android:layout_width="320dp"
        android:layout_height="299dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:alpha=".7"
        android:transitionName="ea5transition1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ea5" />

    <ImageView
        android:id="@+id/ea3"
        android:layout_width="200dp"
        android:layout_height="196dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="192dp"
        android:layout_marginBottom="296dp"
        android:alpha=".8"
        android:transitionName="ea3transition1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ea3" />

    <TextView
        android:id="@+id/secondslidetext"
        android:layout_width="366dp"
        android:layout_height="98dp"
        android:layout_marginTop="260dp"
        android:layout_marginRight="22dp"
        android:fontFamily="sans-serif-medium"
        android:text="SO,                                                                   Whats waiting for?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:transitionName="texttransition1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logobucketlist" />

    <ImageView
        android:id="@+id/logobucketlist"
        android:layout_width="159dp"
        android:layout_height="22dp"
        android:layout_marginTop="40dp"
        android:transitionName="logotransition1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logobucketlist" />

    <ImageView
        android:id="@+id/slideBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:layout_marginRight="72dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secondslidetext"
        android:transitionName="mainslidetransition"
        app:srcCompat="@drawable/slidebar" />

    <ImageView
        android:id="@+id/subSlideBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:layout_marginRight="72dp"
        android:transitionName="slidebartransition1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondslidetext"
        app:srcCompat="@drawable/subslidebar" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/logobucketlist"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/getstartedbuttonshape"
        android:elevation="20dp"
        android:onClick="toLoginPage"
        android:padding="2dp"
        android:text="LOGIN"
        android:textColor="@color/pink1"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/slideBar"

        tools:layout_editor_absoluteX="100dp" />

    <Button
        android:id="@+id/signupButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/logobucketlist"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pinkbutton"
        android:elevation="20dp"
        android:onClick="toSignupPage"
        android:padding="2dp"
        android:text="SIGNUP"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/loginButton"

        tools:layout_editor_absoluteX="100dp" />


</androidx.constraintlayout.widget.ConstraintLayout>