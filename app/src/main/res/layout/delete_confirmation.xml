<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#142327"
                android:textSize="20dp"
                android:text="Are you sure?"
                android:fontFamily="@font/nunito_bold"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#142327"
                android:textSize="16dp"
                android:layout_marginVertical="10dp"
                android:text="permanent deletion on confirming!!"
                android:fontFamily="@font/nunito" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/cancelDeletionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:layout_alignParentBottom="true"
                    android:textSize="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toStartOf="@id/confirmDeletionButton"
                    android:textColor="#737272"
                    android:fontFamily="@font/nunito"/>
                <TextView
                    android:id="@+id/confirmDeletionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:textSize="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/colorbottomnav"
                    android:fontFamily="@font/nunito"/>
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>