<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.loginLayouts.OtpActivityLogin">

    <TextView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/description"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Enter OTP"
        android:textColor="#00283E"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/otp2"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="90dp"
        android:fontFamily="@font/montserrat"
        android:text="We have sent you an OTP\nfor phone number verification"
        android:textAlignment="center"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/otp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/otpButton"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:hint="Enter Phone"
        android:inputType="phone"
        android:padding="16dp"
        android:textSize="16dp" />

    <Button
        android:id="@+id/otpButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/resend"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="147dp"
        android:background="@drawable/otpbuttonbackground"
        android:padding="16dp"
        android:text="get otp"
        android:textColor="@android:color/white"
        android:textSize="16dp" />
    <EditText
        android:id="@+id/enterOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/otpButton"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:hint="Enter OTP here"
        android:inputType="phone"
        android:padding="16dp"
        android:textSize="16dp" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/resend"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/otpbuttonbackground"
        android:padding="16dp"
        android:text="Sign in"
        android:textColor="@android:color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend OTP?"
        android:textColor="#ED2929"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>