<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:theme="@style/AppTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="111dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_anchor="@id/appbar"
       android:layout_marginTop="24dp"
       app:layout_anchorGravity="bottom"
       android:layout_gravity="bottom">
       <HorizontalScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:scrollbars="none"
           android:layout_below="@id/tab_bar">
           <com.google.android.material.chip.ChipGroup
               android:id="@+id/chip_group_profile"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
              android:background="#FAFAFA"
               >

               <com.google.android.material.chip.Chip
                   android:tag="1"
                   android:id="@+id/chip_travel"
                   android:layout_width="80dp"
                   android:layout_height="55dp"
                   android:layout_marginVertical="10dp"
                   android:layout_marginLeft="20dp"
                   android:text="Travel"
                   android:elevation="2dp"
                   android:textAlignment="center"
                   android:textSize="16dp"
                   app:chipBackgroundColor="@color/chip_background_selector"
                   android:textColor="@color/chip_text_selector"
                   android:checkable="true"
                   style="@style/Widget.MaterialComponents.Chip.Choice"/>

               <com.google.android.material.chip.Chip
                   android:tag="2"
                   android:id="@+id/chip_food"
                   android:layout_width="80dp"
                   android:layout_height="55dp"
                   android:layout_marginVertical="10dp"
                   android:layout_marginLeft="10dp"
                   android:text="Food"
                   android:elevation="2dp"
                   android:textAlignment="center"
                   android:textSize="16dp"
                   app:chipBackgroundColor="@color/chip_background_selector"
                   android:textColor="@color/chip_text_selector"
                   android:checkable="true"
                   style="@style/Widget.MaterialComponents.Chip.Choice"/>

               <com.google.android.material.chip.Chip
                   android:id="@+id/chip_adventure"
                   android:tag="3"
                   android:layout_width="100dp"
                   android:layout_height="55dp"
                   android:layout_marginVertical="10dp"
                   android:layout_marginLeft="10dp"
                   android:text="Adventure"
                   android:elevation="2dp"
                   android:textAlignment="center"
                   android:textSize="16dp"
                   app:chipBackgroundColor="@color/chip_background_selector"
                   android:textColor="@color/chip_text_selector"
                   android:checkable="true"
                   style="@style/Widget.MaterialComponents.Chip.Choice"/>
               <com.google.android.material.chip.Chip
                   android:id="@+id/chip_career"
                   android:tag="4"
                   android:layout_width="80dp"
                   android:layout_height="55dp"
                   android:layout_marginVertical="10dp"
                   android:layout_marginLeft="10dp"
                   android:text="Career"
                   android:elevation="2dp"
                   android:textAlignment="center"
                   android:textSize="16dp"
                   app:chipBackgroundColor="@color/chip_background_selector"
                   android:textColor="@color/chip_text_selector"
                   android:checkable="true"
                   style="@style/Widget.MaterialComponents.Chip.Choice"/>
               <com.google.android.material.chip.Chip
                   android:id="@+id/chip_financial"
                   android:tag="5"
                   android:layout_width="90dp"
                   android:layout_height="55dp"
                   android:layout_marginVertical="10dp"
                   android:layout_marginLeft="10dp"
                   android:text="Financial"
                   android:elevation="2dp"
                   android:textAlignment="center"
                   android:textSize="16dp"
                   app:chipBackgroundColor="@color/chip_background_selector"
                   android:textColor="@color/chip_text_selector"
                   android:checkable="true"
                   style="@style/Widget.MaterialComponents.Chip.Choice"/>

               <com.google.android.material.chip.Chip
                   android:id="@+id/chip_relation"
                   android:tag="6"
                   android:layout_width="80dp"
                   android:layout_height="55dp"
                   android:layout_marginVertical="10dp"
                   android:layout_marginLeft="10dp"
                   android:text="Relation"
                   android:elevation="2dp"
                   android:textAlignment="center"
                   android:textSize="16dp"
                   app:chipBackgroundColor="@color/chip_background_selector"
                   android:textColor="@color/chip_text_selector"
                   android:checkable="true"
                   style="@style/Widget.MaterialComponents.Chip.Choice"/>

               <com.google.android.material.chip.Chip
                   android:id="@+id/chip_learning"
                   android:tag="7"
                   android:layout_width="90dp"
                   android:layout_height="55dp"
                   android:layout_marginVertical="10dp"
                   android:layout_marginLeft="10dp"
                   android:text="Learning"
                   android:elevation="2dp"
                   android:textAlignment="center"
                   android:textSize="16dp"
                   app:chipBackgroundColor="@color/chip_background_selector"
                   android:textColor="@color/chip_text_selector"
                   android:checkable="true"
                   style="@style/Widget.MaterialComponents.Chip.Choice"/>

               <com.google.android.material.chip.Chip
                   android:id="@+id/chip_health"
                   android:tag="8"
                   android:layout_width="80dp"
                   android:layout_height="55dp"
                   android:layout_marginVertical="10dp"
                   android:layout_marginLeft="10dp"
                   android:text="Health"
                   android:elevation="2dp"
                   android:textAlignment="center"
                   android:textSize="16dp"
                   app:chipBackgroundColor="@color/chip_background_selector"
                   android:textColor="@color/chip_text_selector"
                   android:checkable="true"
                   style="@style/Widget.MaterialComponents.Chip.Choice"/>
               <com.google.android.material.chip.Chip
                   android:id="@+id/chip_other"
                   android:tag="9"
                   android:layout_width="80dp"
                   android:layout_height="55dp"
                   android:layout_marginVertical="10dp"
                   android:layout_marginLeft="10dp"
                   android:text="Other"
                   android:elevation="4dp"
                   android:textAlignment="center"
                   android:textSize="16dp"
                   app:chipBackgroundColor="@color/chip_background_selector"
                   android:textColor="@color/chip_text_selector"
                   android:checkable="true"
                   style="@style/Widget.MaterialComponents.Chip.Choice"/>
               <com.google.android.material.chip.Chip
                   android:layout_width="80dp"
                   android:layout_height="55dp"
                   android:layout_marginVertical="10dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="20dp"
                   android:text="Travel"
                   android:elevation="2dp"
                   android:textAlignment="center"
                   android:textSize="16dp"
                   app:chipBackgroundColor="@color/chip_background_selector"
                   android:textColor="@color/chip_text_selector"
                   android:checkable="true"
                   style="@style/Widget.MaterialComponents.Chip.Choice"/>



           </com.google.android.material.chip.ChipGroup>
       </HorizontalScrollView>

       <com.google.android.material.tabs.TabLayout
           android:id="@+id/tab_bar"
           android:layout_width="match_parent"
           android:layout_height="?attr/actionBarSize"
           android:background="@color/colorwhite"
           app:tabIndicatorColor="@color/pink1"
           app:tabSelectedTextColor="@color/pink1"
           app:tabMode="fixed">

           <com.google.android.material.tabs.TabItem
               android:id="@+id/tabDreams"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Active" />


           <com.google.android.material.tabs.TabItem
               android:id="@+id/tabAchieved"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Achieved" />
       </com.google.android.material.tabs.TabLayout>

   </RelativeLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"

        android:id="@+id/appbar">


        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark"

            app:collapsedTitleTextAppearance="@style/Toolbar.collapseTitleText"
            android:fitsSystemWindows="true"
            app:contentScrim="#FFFFFF"
            app:expandedTitleTextAppearance="@style/Toolbar.ProfileExpandedTitleText"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="PROFILE">

            <ImageView
                android:id="@+id/profileBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"/>
<!--            android:src="@drawable/profile_background"/>-->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:background="@color/blackcolor"
                android:alpha=".6"/>
<!--            <ImageView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:scaleType="centerCrop"-->
<!--                app:layout_collapseMode="parallax"-->
<!--                android:src="@drawable/profile_black_background"-->
<!--                android:alpha=".6"/>-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="90dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilePageImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/default_profile" />

                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profilePageImage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="@color/white"
                    android:textSize="19dp"
                    android:textStyle="bold" />

            </RelativeLayout>


<!--            <androidx.appcompat.widget.Toolbar-->
<!--                android:id="@+id/toolBar"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="?attr/actionBarSize"-->

<!--                android:layout_marginTop="24dp"-->
<!--                android:fitsSystemWindows="true"-->
<!--                android:theme="@style/ThemeOverlay.MaterialComponents.Light"-->
<!--                app:layout_collapseMode="pin"-->
<!--                app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light">-->


<!--            </androidx.appcompat.widget.Toolbar>-->


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>