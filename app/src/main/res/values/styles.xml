<resources>
    <!-- Base application theme. -->
    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorgreen</item>
        <item name="colorPrimaryDark">@color/colorgreen</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>


    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">#D81C0012</item>
        <item name="colorPrimaryDark">#D81C0012</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>

        <!-- Customize your theme here. -->

    </style>

    <style name="Toolbar.collapseTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Toolbar.expandedTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">26dp</item>
        <item name="fontFamily">@font/montserrat_bold</item>

    </style>

    <style name="Toolbar.ProfileExpandedTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20dp</item>

        <item name="android:textColor">#05001429</item>
        <item name="fontFamily">@font/montserrat_bold</item>

    </style>

    <style name="categories.Text" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textSize">20dp</item>

    <item name="android:textColor">#FFFFFF</item>
    <item name="fontFamily">@font/montserrat_bold</item>
    <item name="android:gravity">center</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/blackcolor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:cursorVisible">false</item>
    </style>

        <style name="AlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
            <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle2</item>
            <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle2</item>
        </style>

    <style name="NegativeButtonStyle2" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/pink1</item>
        <item name="android:textSize">16dp</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="PositiveButtonStyle2" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/blackcolor</item>
        <item name="android:textSize">16dp</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>


    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/pink1</item>
        <item name="android:textSize">16dp</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blackcolor</item>
        <item name="android:textSize">16dp</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>


    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:textColor">@color/blackcolor</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="background">@android:color/transparent</item>
        <item name="android:textColor">@color/blackcolor</item>
    </style>


    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">#218D87</item> <!-- Whatever color you want-->
    </style>

        <style name="ChipCustomStyle" parent="Widget.MaterialComponents.Chip.Filter">
            <item name="fontFamily">@font/nunito_bold</item>
            <item name="chipBackgroundColor">@color/chip_background_selector_2</item>
            <item name="android:textColor">@color/chip_text_selector_2</item>
            <item name="checkedIconTint">#252525</item>
            <item name="rippleColor">#feeac5</item>

    </style>

    <style name="customText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16dp</item>

        <item name="android:textColor">#373636</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="customTextTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">#373636</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MyCustomFontTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the search icon -->
        <item name="searchIcon">@drawable/ic_round_search_24</item>
        <!-- Gets rid of the "underline" in the text -->
        <item name="queryBackground">@color/white</item>
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@null</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">@string/search_hint</item>
    </style>


</resources>