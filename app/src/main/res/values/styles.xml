<resources>
    <!-- Base application theme. -->
    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorgreen</item>
        <item name="colorPrimaryDark">@color/colorgreen</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>


    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">#D81C0012</item>
        <item name="colorPrimaryDark">#D81C0012</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Toolbar.collapseTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Toolbar.expandedTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20dp</item>

        <item name="android:textColor">#05001429</item>
        <item name="fontFamily">@font/montserrat_bold</item>

    </style>

    <style name="categories.Text" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textSize">20dp</item>

    <item name="android:textColor">#042C42</item>
    <item name="fontFamily">@font/montserrat_bold</item>
    <item name="android:gravity">center</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/blackcolor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:cursorVisible">false</item>
    </style>

        <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
            <item name="android:textColor">#000000</item>
            <item name="android:textColorPrimary">#595959</item>


            <item name="android:colorAccent">#1b5e20</item>
        </style>




</resources>